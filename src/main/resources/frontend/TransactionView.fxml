<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1"

            fx:controller="com.frauddetector.frontend.controllers.TransactionViewController">
    <children>
        <TableView fx:id="transactionTable" layoutX="10" layoutY="10" prefWidth="780"
                   prefHeight="580">
            <columns>
                <TableColumn fx:id="payerIdColumn" text="Payer ID" prefWidth="150"/>
                <TableColumn fx:id="amountColumn" text="Amount" prefWidth="100"/>
                <TableColumn fx:id="beneficiaryIdColumn" text="Beneficiary ID"
                             prefWidth="150"/>
                <TableColumn fx:id="transactionTypeColumn" text="Transaction Type"
                             prefWidth="150"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>
